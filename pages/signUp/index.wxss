.sign-up-page{
    background: #f5f5f9;
    height: 100vh;
}
.picker-item{
    display:flex;
    padding-left: 32rpx;
    padding-right: 32rpx;
    border-bottom: solid 1px #e1e1e1;
    line-height: 120rpx;
    height: 120rpx;
    align-items:center;
    font-size:34rpx;
}
.picker-item .value-text{
    text-align:right;
    flex:1;
}

.value-text input {
    line-height: 120rpx;
    height: 120rpx;
}

.label-text{
    width: 200rpx;
}

.head-img{
    width:100%;
}

.head-img image{
    width:100%;
    height: 514rpx;
}

.sign-up-form{
    top:-100rpx;
    position:relative;
    border-radius: 8rpx;
    width:690rpx;
    margin:auto;
    background:#ffffff;
    padding-bottom: 70rpx;
}

.submit-btn {
    width: 370rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border: none;
    font-size: 34rpx;
    font-family: 'PingFangSC-Semibold';
    color: #ffffff;
    background: #F56A00;
    border-radius: 8rpx;
    margin-top:100rpx;
}