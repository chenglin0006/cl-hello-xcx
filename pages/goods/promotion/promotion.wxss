page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.topView {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 0;
  border-bottom: 1px #D8D8D8 solid;
  background-color: #fff;
  position: relative;
  z-index: 999;
}

.topSearch {
  width: 560rpx;
  height: 60rpx;
  position: relative;
  background-color: #F1F1F1;
  border-radius: 30rpx;
  margin-left: 30rpx;
}

.topSearchIcon {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  z-index: 1;
}

.topSearchCont {
  width: 560rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 70rpx;
  font-size: 28rpx;
  display: flex;
  box-sizing: border-box;
}

.topSearchFail {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 9;
}

.topSearchRight {
  width: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.topSearchBtn {
  width: 110rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #FA7B00;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  padding: 0;
}

.topFilter {
  z-index: 100;
}

.promotionTip {
  background-color: #FFF3D5;
  padding: 0 20rpx;
}

.promotionTipText {
  color: #FF9000;
  font-size: 28rpx;
  line-height: 64rpx;
}

.promotionCountDownWrap {
  display: inline-block;
  margin-left: 8rpx;
  line-height: 64rpx;
}

.promotionCountDown {
  display: flex;
  align-items: center;
}

.promotionCountDown > text {
  margin-left: 4rpx;
}

.promotionCountDownNumber {
  border-radius: 6rpx;
  padding: 0 4rpx;
  background: #FA7B00;
  color: #fff;
  font-size: 26rpx;
  line-height: 32rpx;
}

.promotionCountDownColon {
  color: #FA7B00;
}

/* 列表**/

.list {
  width: 100%;
  justify-content: flex-start;
}

.listMain {
  width: 100%;
  margin-bottom: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.listGood {
  width: 100%;
  background-color: #fff;
  font-size: 32rpx;
}

.listGood navigator {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 30rpx;
}

.listGoodImg {
  width: 220rpx;
  height: 220rpx;
}

.rightItem {
  padding-left: 30rpx;
  flex: 1;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1px #D8D8D8 solid;
}

.listGoodTit {
  color: #000;
  flex: 1;
  line-height: 45rpx;
  overflow: hidden;
  padding: 0;
  margin: 30rpx 0 10rpx 0;
}

.listGoodTit text {
  word-break: break-all;
}

.listGoodBottom {
  display: flex;
  flex: 1;
  justify-content: space-between;
  overflow: hidden;
  align-items: center;
  color: #FA7B00;
}

.listGoodMark {
  border: 1rpx #FA7B00 solid;
  margin-left: 10rpx;
  border-radius: 8rpx;
  padding: 0 5rpx;
  color: #FA7B00;
  font-size: 24rpx;
}

.cartImg {
  width: 55rpx;
  height: 55rpx;
}

.noMore {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #00000000;
  text-align: center;
  color: #666;
  font-size: 32rpx;
}

.bottomView {
  width: 100%;
  height: 100rpx;
  border-top: 1px #D8D8D8 solid;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.bottomLeftView {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex: 1;
  justify-content: center;
}

.bottomLeftText {
  color: #333;
  font-size: 28rpx;
}

.bottomLeftText1 {
  color: #FA7B00;
  font-size: 28rpx;
}

.bottomLeftText2 {
  color: #999;
  font-size: 28rpx;
}

.bottomRightView {
  width: 240rpx;
  background: -webkit-linear-gradient(left, rgb(251, 123, 0), rgb(254, 177, 60));
  background: -o-linear-gradient(right, rgb(251, 123, 0), rgb(254, 177, 60));
  background: -moz-linear-gradient(right, rgb(251, 123, 0), rgb(254, 177, 60));
  background: linear-gradient(to right, rgb(251, 123, 0), rgb(254, 177, 60));
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.bottomBtnText {
  color: #fff;
  font-size: 32rpx;
}