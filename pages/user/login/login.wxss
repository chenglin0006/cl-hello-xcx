/* pages/user/login/login.wxss */
page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.logincontainer{
  display:flex;
  padding-left: 57rpx;
  padding-right:57rpx;
  flex-direction: column;
  justify-content: flex-start;
  padding-top: 40px;
  align-items: center;
  height: 90vh;
}
.logo{
  width:60px;
  height:60px;
  border-radius: 5%;
  margin-bottom: 50px;
}
.input-account{
  align-self: stretch; 
  font-size: 15px;
  height:50px;
}
.view-code{
  display:flex;
  border-top: 1rpx solid #dadada;
  flex-direction: column;
  align-self: stretch;
  /* height:50px; */
  padding: 10rpx 0;
  justify-content: space-around;
  
}
.code-img{
  display:flex;
  flex-direction: row;
  align-self: stretch;
  /* height:50px; */
  padding: 10rpx 0;
  justify-content: space-around;
  align-items: center;
}
.view-code text{
  font-size: 32rpx;
  color: #333;
}
.code-img text{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.view-sms-code{
  display:flex;
  border-top: 1rpx solid #dadada;
  border-bottom: 1rpx solid #dadada;
  flex-direction: 'row';
  align-self: stretch;
  height:50px;
  align-items: center;
}

.input-code{
  flex:1;
  font-size: 15px;
  height:50px;
}
.code-button{
  font-size: 15px;
  height:35px;
  color:white;
  background-color: #ff9000;
  border-radius: 10rpx;
  text-align: middle;
  border: 0px;
  width: 95px;
  padding:0px;
  align-items: center;
  justify-content: center;
  display:flex;
}
.login-button{
  color:white;
  background-color: #ff9000;
  font-size: 20px;
  border-radius: 10rpx;
  margin-top: 30px;
  align-self: stretch;
  width: 100%;
  height:44px;
  border: 0px;
  padding: 0px;
  align-items: center;
  justify-content: center;
  display:flex;
  text-align: middle;
}
button[disabled]:not([type]){
  background-color: #ff9000;
  color:white;
  opacity: 0.7
}
.bottom-text{
  font-size: 14px;
  margin-top: 12px;
  color:#999999
}
.picCodeBackView{
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  top:0px;
  left:0px;
  right: 0px;
  bottom: 0px;
}
.picCodeView{
  display:flex;
  flex-direction: column;
  align-items: center;
  
}
.picCodeViewTitle{
  color: #666666;
  font-size:15px;
}
.picCodeCenter{
  display:flex;
  flex-direction: row;
}
.bottom-term-text{
  font-size: 14px;
  color:#999999;
}
.bottom-view{
  display:flex;
  flex-direction: row;
  align-items: center
}
.bottom-term-btn{
  font-size: 14px;
  background-color: transparent;
  padding: 0px;
  color: #f08201
}
.justPhoneLogin{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 40rpx;
}