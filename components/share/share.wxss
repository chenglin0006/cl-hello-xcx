/* component/share/share.wxss */
.component_container{
  background-color: rgba(0, 0, 0, 0.6);
  width: 100%;
  min-height: 100%;
  z-index: 10000;
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end
}
.bottom{
  display: flex;
  flex-direction: column;
  background-color: white;
}
.header{
  height: 45px;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #F7F7F7;
  align-items: center;
}
.header text{
  flex: 1;
  font-size: 16px;
  color: #333333;
  margin-left: 15px;

}
.header view{
  width: 80px;
  height: 45px;
   display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end
}
.header view image{
  width: 12px;
  height: 12px;
  margin-right: 15px;
}
.share_container{
  height: 135px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #00000000;
}
.icon-view{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-self: stretch;
  justify-content: center;
  align-items: center;
}
.share_btn{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-self: stretch;
  justify-content: center;
  align-items: center;
  border-radius:0;
  padding: 0px;
  background-color: #fff
}
/* .share_btn ::after{
  border-radius:0;
} */
.icon-view image{
  width: 50px;
  height: 50px;
}
.icon-view text{
  margin-top: 6px;
  font-size: 15px;
  color: #666666;
}
.line{
  width: 1px;
  height: 50px;
  border-left: 1px solid #E4E4E4;
}
.share_pyq_container{
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.share_pyq_container image{
  width: 170px;
  /* height: 294px; */
  margin-top: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 5px 0 #C7C7C7;
}
.share_pyq_container button{
  background: #FA7B00;
  border-radius: 10px;
  font-size: 16px;
  color: #FFFFFF;
  width: 690rpx;
  height: 47px;
  display: flex;
  justify-content: center;
  align-items: center
}
.share_pyq_container text{
  font-size: 12px;
  color: #666666;
  margin-top: 20px;
  margin-bottom: 20px;
}
.other-button-hover{
  background-color: #00000000;
}