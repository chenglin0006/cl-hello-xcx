/* components/base-modal/base-modal.wxss */

.base-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  overflow: hidden;
}

.base-modal-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.base-modal-wrapper {
  width: 640rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.base-modal-title {
  display: block;
  padding: 30rpx 0;
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
  line-height: 1;
  text-align: center;
}

.base-modal-icon-close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.base-modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.base-modal-btn {
  width: 260rpx;
  margin: 0;
  padding: 29rpx 0;
  border: 2rpx solid transparent;
  border-radius: 20rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 1;
  outline: none;
}

.base-modal-cancel {
  background-color: #fff;
  border: 2rpx solid #FA7B00;
  color: #FA7B00;
}

.base-modal-confirm {
  background-image: linear-gradient(270deg, #FFA650 0%, #FA7B00 71%);
  color: #fff;
}